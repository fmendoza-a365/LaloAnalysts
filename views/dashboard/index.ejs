<!-- Header del Dashboard -->
<div class="mb-4 sm:mb-8">
  <div class="bg-gradient-to-r from-blue-600 to-blue-700 rounded-lg sm:rounded-xl shadow-lg p-4 sm:p-6 mb-4 sm:mb-6">
