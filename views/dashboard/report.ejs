<div class="bg-white shadow rounded-lg">
  <div class="px-4 py-5 border-b border-gray-200 sm:px-6 flex justify-between items-center">
    <div>
      <h3 class="text-lg leading-6 font-medium text-gray-900">
        <%= report.name %>
      </h3>
      <p class="mt-1 max-w-2xl text-sm text-gray-500">
        Reporte de Power BI
      </p>
    </div>
    <div class="flex space-x-2">
      <a href="/dashboard" class="inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
        <svg class="-ml-1 mr-2 h-5 w-5 text-gray-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
        </svg>
        Volver al Tablero
      </a>
      <% if (user.role === 'admin') { %>
        <form action="/dashboard/reports/<%= report._id %>/delete" method="POST" class="inline-block">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" onclick="return confirm('¿Seguro que deseas eliminar este reporte?')">
            <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
            </svg>
            Eliminar
          </button>
        </form>
      <% } %>
    </div>
  </div>
  
  <div class="px-4 py-5 sm:p-6">
    <!-- Power BI Report Container (responsive 16:9) -->
    <div id="reportBox" class="relative w-full" style="padding-top:56.25%; min-height:320px;">
      <div id="reportContainer" class="absolute inset-0 w-full h-full" data-access-token="<%= accessToken || '' %>">
        <div class="flex items-center justify-center h-full">
          <div class="text-center">
            <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-500 mx-auto"></div>
            <p class="mt-4 text-gray-600">Cargando reporte de Power BI...</p>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Report Details -->
    <div class="mt-8 border-t border-gray-200 pt-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Detalles del Reporte</h3>
      <div class="bg-gray-50 p-4 rounded-lg">
        <dl class="grid grid-cols-1 gap-x-4 gap-y-4 sm:grid-cols-2">
          <div class="sm:col-span-1">
            <dt class="text-sm font-medium text-gray-500">Nombre del Reporte</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= report.name %></dd>
          </div>
          <div class="sm:col-span-1">
            <dt class="text-sm font-medium text-gray-500">ID del Reporte</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= report.reportId %></dd>
          </div>
          <div class="sm:col-span-1">
            <dt class="text-sm font-medium text-gray-500">ID del Espacio de Trabajo</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= report.groupId %></dd>
          </div>
          <div class="sm:col-span-2">
            <dt class="text-sm font-medium text-gray-500">URL de Inserción</dt>
            <dd class="mt-1 text-sm text-blue-600 break-all">
              <a href="<%= report.embedUrl %>" target="_blank" class="hover:underline"><%= report.embedUrl %></a>
            </dd>
          </div>
        </dl>
      </div>
    </div>
  </div>
</div>

<!-- Power BI Embed Script -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const reportContainer = document.getElementById('reportContainer');
    const accessToken = reportContainer ? (reportContainer.dataset.accessToken || null) : null;

    if (!accessToken) {
      reportContainer.innerHTML = `
        <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-yellow-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.72-1.36 3.485 0l6.518 11.59c.75 1.335-.213 2.987-1.742 2.987H3.48c-1.53 0-2.492-1.652-1.742-2.988L8.257 3.1zM11 13a1 1 0 10-2 0 1 1 0 002 0zm-1-6a1 1 0 00-1 1v2a1 1 0 002 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm text-yellow-700">
                No hay token de acceso de Power BI configurado. Configura las credenciales de Azure AD para obtener un token de inserción.
              </p>
            </div>
          </div>
        </div>`;
      return;
    }

    const config = {
      type: 'report',
      tokenType: 'Aad',
      accessToken: accessToken,
      embedUrl: '<%= report.embedUrl %>',
      id: '<%= report.reportId %>',
      settings: {
        panes: { filters: { expanded: false, visible: true } },
        background: 'transparent',
        hideDefaultSlicers: true,
      }
    };

    const report = powerbi.embed(reportContainer, config);
    report.off('loaded');
    report.on('loaded', function() { console.log('Reporte cargado correctamente'); });
    report.on('error', function(event) {
      console.error(event.detail);
      reportContainer.innerHTML = `
        <div class="bg-red-50 border-l-4 border-red-400 p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm text-red-700">
                Error al cargar el reporte de Power BI. Revisa la consola para más detalles.
              </p>
            </div>
          </div>
        </div>`;
    });
  });
</script>
