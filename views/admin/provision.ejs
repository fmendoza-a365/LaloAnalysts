<div class="bg-white shadow rounded-lg overflow-hidden">
  <div class="px-6 py-5 border-b border-gray-200">
    <h3 class="text-lg leading-6 font-medium text-gray-900">Provisión Agregada · Gestión de Datasets</h3>
    <p class="mt-1 text-sm text-gray-500">
      Carga archivos CSV de provisión agregada de Genesys Cloud. Los datos se agruparán automáticamente por mesas de trabajo.
    </p>
  </div>

  <div class="px-6 py-5 bg-blue-50 border-b border-blue-100">
    <h4 class="text-sm font-semibold text-blue-900 mb-3">Clasificación Automática por Mesas</h4>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3 text-xs">
      <div class="bg-white p-3 rounded border border-blue-200">
        <div class="font-semibold text-blue-700 mb-1">Mesa de Ayuda</div>
        <div class="text-gray-600">Colas: CI_, Cl_, MA_</div>
      </div>
      <div class="bg-white p-3 rounded border border-red-200">
        <div class="font-semibold text-red-700 mb-1">Fraude - Inbound</div>
        <div class="text-gray-600">Colas con "Fraude" (excepto saliente)</div>
      </div>
      <div class="bg-white p-3 rounded border border-orange-200">
        <div class="font-semibold text-orange-700 mb-1">Fraude - Outbound</div>
        <div class="text-gray-600">Colas con "Fraude Saliente"</div>
      </div>
      <div class="bg-white p-3 rounded border border-purple-200">
        <div class="font-semibold text-purple-700 mb-1">Central Telefónica y Servicios</div>
        <div class="text-gray-600">Central telefónica, Srv_administrativo</div>
      </div>
      <div class="bg-white p-3 rounded border border-green-200">
        <div class="font-semibold text-green-700 mb-1">Redes Sociales</div>
        <div class="text-gray-600">Facebook, Instagram, Youtube, rs_</div>
      </div>
      <div class="bg-white p-3 rounded border border-gray-200">
        <div class="font-semibold text-gray-700 mb-1">Otras Colas</div>
        <div class="text-gray-600">Colas sin clasificación específica</div>
      </div>
    </div>
  </div>

  <div class="px-6 py-5">
    <form method="POST" action="/admin/provision/upload" enctype="multipart/form-data" class="space-y-4">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div>
          <label for="anio" class="block text-sm font-medium text-gray-700 mb-1">Año</label>
          <input type="number" id="anio" name="anio" min="2000" max="2100" value="<%= new Date().getFullYear() %>" required
            class="block w-full border border-gray-300 rounded-md shadow-sm px-3 py-2 focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm">
        </div>
        <div>
          <label for="mes" class="block text-sm font-medium text-gray-700 mb-1">Mes</label>
          <select id="mes" name="mes" required class="block w-full border border-gray-300 rounded-md shadow-sm px-3 py-2 focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm">
            <% const _mes = new Date().getMonth() + 1; %>
            <% for (let i=1; i<=12; i++) { %>
              <option value="<%= i %>" <%= i === _mes ? 'selected' : '' %>><%= String(i).padStart(2,'0') %> - <%= ['Enero','Febrero','Marzo','Abril','Mayo','Junio','Julio','Agosto','Septiembre','Octubre','Noviembre','Diciembre'][i-1] %></option>
            <% } %>
          </select>
        </div>
        <div>
          <label for="file" class="block text-sm font-medium text-gray-700 mb-1">Archivo CSV</label>
          <input type="file" id="file" name="file" accept=".csv" required
            class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100">
        </div>
      </div>
      <div class="flex items-center gap-4">
        <label class="flex items-center">
          <input type="checkbox" name="reemplazar" value="1" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500">
          <span class="ml-2 text-sm text-gray-700">Reemplazar si ya existe</span>
        </label>
        <button type="submit" class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-md shadow-sm transition-colors">
          Cargar Provisión
        </button>
      </div>
    </form>
  </div>
</div>

<% if (datasets && datasets.length > 0) { %>
<div class="mt-6 bg-white shadow rounded-lg overflow-hidden">
  <div class="px-6 py-4 border-b border-gray-200">
    <h4 class="text-md font-semibold text-gray-900">Datasets Cargados</h4>
  </div>
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Periodo</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Archivo</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Registros</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fecha Carga</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% datasets.forEach(ds => { %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
              <%= ds.anio %>-<%= String(ds.mes).padStart(2,'0') %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
              <%= ds.nombreArchivo %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
              <%= ds.totalRegistros %> días
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= ds.creadoEn ? new Date(ds.creadoEn).toLocaleString('es-PE') : '-' %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  
  <% if (pagination && pagination.totalPages > 1) { %>
  <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 flex items-center justify-between">
    <div class="text-sm text-gray-600">
      Página <%= pagination.page %> de <%= pagination.totalPages %> — <%= pagination.total %> dataset(s)
    </div>
    <div class="flex gap-2">
      <% const base = '/admin/provision?perPage=' + pagination.perPage + '&page='; %>
      <% if (pagination.page > 1) { %>
        <a href="<%= base + 1 %>" class="px-3 py-1 border border-gray-300 rounded text-sm hover:bg-gray-100">Primera</a>
        <a href="<%= base + (pagination.page - 1) %>" class="px-3 py-1 border border-gray-300 rounded text-sm hover:bg-gray-100">Anterior</a>
      <% } %>
      <% if (pagination.page < pagination.totalPages) { %>
        <a href="<%= base + (pagination.page + 1) %>" class="px-3 py-1 border border-gray-300 rounded text-sm hover:bg-gray-100">Siguiente</a>
        <a href="<%= base + pagination.totalPages %>" class="px-3 py-1 border border-gray-300 rounded text-sm hover:bg-gray-100">Última</a>
      <% } %>
    </div>
  </div>
  <% } %>
</div>
<% } else { %>
<div class="mt-6 bg-yellow-50 border border-yellow-200 rounded-lg p-4">
  <p class="text-yellow-800 text-sm">No hay datasets de provisión cargados aún.</p>
</div>
<% } %>
