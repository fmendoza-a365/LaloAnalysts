                <!-- Reportes -->
                <div class="pt-2 mt-2 border-t">
                  <button onclick="toggleSection('mobile-reportes')" class="w-full flex items-center justify-between px-3 py-2 text-xs text-gray-700 hover:bg-gray-50 rounded-md">
                    <span class="flex items-center gap-2">
