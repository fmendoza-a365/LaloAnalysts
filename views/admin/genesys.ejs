<div class="bg-white shadow rounded-lg">
  <div class="px-4 py-5 sm:px-6 border-b border-gray-200 flex items-center justify-between">
    <div>
      <h3 class="text-lg leading-6 font-medium text-gray-900">Genesys Cloud · Carga de exportes</h3>
      <p class="mt-1 text-sm text-gray-500">Sube archivos CSV/Excel exportados de Genesys Cloud por periodo (Año/Mes). Tipos soportados: <strong>Rendimiento, Estados, Provisión Agregada, Calidad</strong>. Puedes reemplazar un periodo existente.</p>
    </div>
  </div>

  <div class="px-4 py-5 sm:p-6">
    <form action="/admin/genesys/upload" method="POST" enctype="multipart/form-data" class="space-y-4">
      <div class="grid grid-cols-1 sm:grid-cols-5 gap-4">
        <div>
          <label for="tipo" class="block text-sm font-medium text-gray-700">Tipo</label>
          <select required id="tipo" name="tipo" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm px-3 py-2 focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm">
            <option value="rendimiento">Rendimiento</option>
            <option value="estados">Estados</option>
            <option value="provision-agregada">Provisión Agregada</option>
            <option value="calidad">Calidad</option>
          </select>
        </div>
        <div>
          <label for="anio" class="block text-sm font-medium text-gray-700">Año</label>
          <input required type="number" min="2000" max="2100" id="anio" name="anio" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm px-3 py-2 focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm" value="<%= new Date().getFullYear() %>">
        </div>
        <div>
          <label for="mes" class="block text-sm font-medium text-gray-700">Mes</label>
          <select required id="mes" name="mes" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm px-3 py-2 focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm">
            <% for (let i=1;i<=12;i++){ %>
              <option value="<%= i %>"><%= String(i).padStart(2,'0') %></option>
            <% } %>
          </select>
        </div>
        <div class="sm:col-span-2">
          <label for="archivo" class="block text-sm font-medium text-gray-700">Archivo (Excel/CSV)</label>
          <input required accept=".xlsx,.xls,.csv" type="file" name="archivo" id="archivo" class="mt-1 block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 focus:outline-none">
          <p class="mt-1 text-xs text-gray-500">Se normaliza AG y Nombre de Genesys automáticamente, siguiendo tu lógica (A365_, espacios y mayúsculas).</p>
        </div>
      </div>
      <div class="flex items-center justify-between">
        <label class="inline-flex items-center gap-2 text-sm text-gray-700">
          <input type="checkbox" name="reemplazar" value="1" class="h-4 w-4 text-blue-600 border-gray-300 rounded">
          Reemplazar si ya existe ese periodo
        </label>
        <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700">Cargar</button>
      </div>
    </form>

    <div class="mt-8">
      <h4 class="text-sm font-semibold text-gray-800 mb-3">Datasets cargados</h4>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tipo</th>
              <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Periodo</th>
              <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Archivo</th>
              <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Registros</th>
              <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actualizado</th>
              <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% if (datasets && datasets.length) { %>
              <% datasets.forEach(d => { %>
                <tr>
                  <td class="px-3 py-2 text-sm text-gray-900 capitalize">
                    <% if (d.tipo === 'provision-agregada') { %>
                      <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">Provisión Agregada</span>
                    <% } else { %>
                      <%= d.tipo %>
                    <% } %>
                  </td>
                  <td class="px-3 py-2 text-sm text-gray-700"><%= d.anio %>-<%= String(d.mes).padStart(2,'0') %></td>
                  <td class="px-3 py-2 text-sm text-gray-700"><%= d.originalFilename || '-' %></td>
                  <td class="px-3 py-2 text-sm text-gray-700"><%= d.totalRegistros %></td>
                  <td class="px-3 py-2 text-sm text-gray-500"><%= new Date(d.updatedAt || d.creadoEn).toLocaleString() %></td>
                  <td class="px-3 py-2 text-sm">
                    <button 
                      onclick="confirmarEliminacion('<%= d._id %>', '<%= d.tipo %>', '<%= d.anio %>-<%= String(d.mes).padStart(2,'0') %>')"
                      class="inline-flex items-center px-2 py-1 border border-red-300 text-xs font-medium rounded text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                      </svg>
                      Eliminar
                    </button>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="6" class="px-3 py-4 text-center text-sm text-gray-500">No hay datasets cargados.</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
      <div class="mt-4 flex items-center justify-between text-sm text-gray-600">
        <div> Página <%= pagination.page %> de <%= pagination.totalPages %> — <%= pagination.total %> registro(s)</div>
        <div class="space-x-2">
          <% const base = '/admin/genesys?perPage=' + pagination.perPage + '&page='; %>
          <% if (pagination.page > 1) { %>
            <a class="px-3 py-1 border rounded" href="<%= base + 1 %>">Primera</a>
            <a class="px-3 py-1 border rounded" href="<%= base + (pagination.page - 1) %>">Anterior</a>
          <% } %>
          <% if (pagination.page < pagination.totalPages) { %>
            <a class="px-3 py-1 border rounded" href="<%= base + (pagination.page + 1) %>">Siguiente</a>
            <a class="px-3 py-1 border rounded" href="<%= base + pagination.totalPages %>">Última</a>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal de confirmación de eliminación -->
<div id="modalEliminar" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
  <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
    <div class="mt-3">
      <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-red-100">
        <svg class="h-6 w-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
        </svg>
      </div>
      <h3 class="text-lg leading-6 font-medium text-gray-900 text-center mt-4">¿Estás seguro?</h3>
      <div class="mt-2 px-7 py-3">
        <p class="text-sm text-gray-500 text-center">
          Estás a punto de eliminar el dataset de <strong id="modalTipo"></strong> del periodo <strong id="modalPeriodo"></strong>.
        </p>
        <p class="text-sm text-red-600 font-semibold text-center mt-2">
          Esta acción no se puede deshacer y eliminará todos los registros asociados.
        </p>
      </div>
      <div class="flex gap-3 mt-4">
        <button 
          onclick="cerrarModal()"
          class="flex-1 px-4 py-2 bg-gray-200 text-gray-800 text-sm font-medium rounded-md hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-300">
          Cancelar
        </button>
        <button 
          onclick="ejecutarEliminacion()"
          class="flex-1 px-4 py-2 bg-red-600 text-white text-sm font-medium rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500">
          Sí, eliminar
        </button>
      </div>
    </div>
  </div>
</div>

<script>
let datasetIdAEliminar = null;
let tipoAEliminar = null;

function confirmarEliminacion(id, tipo, periodo) {
  datasetIdAEliminar = id;
  tipoAEliminar = tipo;
  
  // Actualizar texto del modal
  document.getElementById('modalTipo').textContent = tipo === 'provision-agregada' ? 'Provisión Agregada' : tipo;
  document.getElementById('modalPeriodo').textContent = periodo;
  
  // Mostrar modal
  document.getElementById('modalEliminar').classList.remove('hidden');
}

function cerrarModal() {
  document.getElementById('modalEliminar').classList.add('hidden');
  datasetIdAEliminar = null;
  tipoAEliminar = null;
}

function ejecutarEliminacion() {
  if (!datasetIdAEliminar || !tipoAEliminar) return;
  
  // Crear formulario para enviar DELETE request
  const form = document.createElement('form');
  form.method = 'POST';
  form.action = `/admin/genesys/delete/${datasetIdAEliminar}`;
  
  // Agregar campo oculto para el método DELETE
  const methodInput = document.createElement('input');
  methodInput.type = 'hidden';
  methodInput.name = '_method';
  methodInput.value = 'DELETE';
  form.appendChild(methodInput);
  
  // Agregar tipo
  const tipoInput = document.createElement('input');
  tipoInput.type = 'hidden';
  tipoInput.name = 'tipo';
  tipoInput.value = tipoAEliminar;
  form.appendChild(tipoInput);
  
  document.body.appendChild(form);
  form.submit();
}

// Cerrar modal al presionar Escape
document.addEventListener('keydown', function(event) {
  if (event.key === 'Escape') {
    cerrarModal();
  }
});
</script>
