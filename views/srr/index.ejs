<!-- Header -->
<div class="bg-white border-b border-gray-200 mb-6">
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4 px-6 py-5">
      <div class="flex-1">
        <h1 class="text-2xl lg:text-3xl font-bold text-gray-900 mb-1">
          SRR · Service Results Report
        </h1>
        <p class="text-sm text-gray-600">
          Métricas consolidadas de Sales, Provisión, Payroll y Margen Bruto
        </p>
      </div>
      
      <!-- Selector de periodo -->
      <div class="flex flex-col sm:flex-row gap-2">
        <form method="GET" action="/srr" class="flex gap-2">
          <select name="mes" class="border border-gray-300 bg-white text-gray-900 rounded-md px-3 py-2 text-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            <% for (let m = 1; m <= 12; m++) { %>
              <option value="<%= m %>" <%= periodo.mes === m ? 'selected' : '' %>>
                <%= ['Enero','Febrero','Marzo','Abril','Mayo','Junio','Julio','Agosto','Septiembre','Octubre','Noviembre','Diciembre'][m-1] %>
              </option>
            <% } %>
          </select>
          <select name="anio" class="border border-gray-300 bg-white text-gray-900 rounded-md px-3 py-2 text-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            <% for (let y = 2023; y <= 2030; y++) { %>
              <option value="<%= y %>" <%= periodo.anio === y ? 'selected' : '' %>><%= y %></option>
            <% } %>
          </select>
          <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 text-sm font-medium transition">
            Actualizar
          </button>
        </form>
        <a href="/srr/anual?anio=<%= periodo.anio %>" 
           class="border border-gray-300 bg-white hover:bg-gray-50 text-gray-700 px-4 py-2 rounded-md text-sm font-medium transition flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          Vista Anual
        </a>
      </div>
    </div>
  </div>

  <% if (noData) { %>
    <!-- Sin datos -->
    <div class="bg-yellow-50 border-l-4 border-yellow-400 rounded-lg p-6 text-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-yellow-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
      </svg>
      <h3 class="text-lg font-semibold text-yellow-800 mb-2">No hay datos para este periodo</h3>
      <p class="text-yellow-700 mb-4">Cargue datos de provisión y tarifas para generar el reporte.</p>
      <div class="flex gap-3 justify-center">
        <a href="/admin/genesys" class="inline-flex items-center px-4 py-2 bg-yellow-600 hover:bg-yellow-700 text-white rounded-md text-sm font-medium transition">
          Cargar Provisión
        </a>
        <a href="/admin/tarifas" class="inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-md text-sm font-medium transition">
          Gestionar Tarifas
        </a>
      </div>
    </div>
  <% } else { %>
    
    <!-- KPIs Resumen General -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
      <!-- Llamadas Totales -->
      <div class="bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg shadow-lg p-5 text-white">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-blue-100">Llamadas Contestadas</p>
            <p class="text-3xl font-bold mt-1"><%= totales.contestadas.toLocaleString('es-PE') %></p>
          </div>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-blue-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
        </div>
      </div>

      <!-- Nivel de Atención -->
      <div class="bg-gradient-to-br <%= parseFloat(totales.nivelAtencion) >= 90 ? 'from-green-500 to-green-600' : 'from-red-500 to-red-600' %> rounded-lg shadow-lg p-5 text-white">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-white/80">Nivel de Atención</p>
            <p class="text-3xl font-bold mt-1"><%= totales.nivelAtencion %>%</p>
          </div>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-white/60" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
          </svg>
        </div>
      </div>

      <!-- Nivel de Servicio -->
      <div class="bg-gradient-to-br <%= parseFloat(totales.nivelServicio) >= 90 ? 'from-green-500 to-green-600' : 'from-red-500 to-red-600' %> rounded-lg shadow-lg p-5 text-white">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-white/80">Nivel de Servicio</p>
            <p class="text-3xl font-bold mt-1"><%= totales.nivelServicio %>%</p>
          </div>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-white/60" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
      </div>

      <!-- Ingresos Totales -->
      <div class="bg-gradient-to-br from-green-500 to-green-600 rounded-lg shadow-lg p-5 text-white">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-white/80">Ingresos Totales</p>
            <p class="text-3xl font-bold mt-1">S/ <%= totales.ingresosTotales.toLocaleString('es-PE', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></p>
          </div>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-white/60" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
      </div>

      <!-- Costos Nómina -->
      <div class="bg-gradient-to-br from-red-500 to-red-600 rounded-lg shadow-lg p-5 text-white">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-white/80">Costos Nómina</p>
            <p class="text-3xl font-bold mt-1">S/ <%= totales.costosNomina.toLocaleString('es-PE', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></p>
          </div>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-white/60" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
        </div>
      </div>

      <!-- Margen Bruto -->
      <div class="bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg shadow-lg p-5 text-white">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-white/80">Margen Bruto</p>
            <p class="text-3xl font-bold mt-1">S/ <%= totales.margenBrutoTotal.toLocaleString('es-PE', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></p>
            <p class="text-xs text-white/70 mt-1"><%= totales.porcentajeMargenTotal %>% de rentabilidad</p>
          </div>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-white/60" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
          </svg>
        </div>
      </div>
    </div>

    <!-- Botones de Exportación -->
    <div class="flex flex-wrap gap-3 mb-6">
      <a href="/srr/export/excel?anio=<%= periodo.anio %>&mes=<%= periodo.mes %>" 
         class="inline-flex items-center gap-2 px-4 py-2 bg-green-600 hover:bg-green-700 text-white rounded-md text-sm font-medium transition shadow">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        Exportar a Excel
      </a>
    </div>

    <!-- Tabla Detallada por Mesa -->
    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
      <div class="px-6 py-4 bg-gradient-to-r from-gray-700 to-gray-800">
        <h3 class="text-lg lg:text-xl font-bold text-white">Detalle por Mesa de Trabajo</h3>
        <p class="text-sm text-white/80 mt-1">Métricas operativas y análisis de costos</p>
      </div>
      
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-800 text-white">
            <tr>
              <th class="px-4 py-3 text-left text-xs font-bold uppercase tracking-wider">Mesa</th>
              <th class="px-4 py-3 text-center text-xs font-bold uppercase tracking-wider">Contestadas</th>
              <th class="px-4 py-3 text-center text-xs font-bold uppercase tracking-wider">% Atención</th>
              <th class="px-4 py-3 text-center text-xs font-bold uppercase tracking-wider">% Servicio</th>
              <th class="px-4 py-3 text-center text-xs font-bold uppercase tracking-wider bg-green-700">Ingresos (S/)</th>
              <th class="px-4 py-3 text-center text-xs font-bold uppercase tracking-wider bg-red-700">Costos Nómina (S/)</th>
              <th class="px-4 py-3 text-center text-xs font-bold uppercase tracking-wider bg-blue-700">Margen Bruto (S/)</th>
              <th class="px-4 py-3 text-center text-xs font-bold uppercase tracking-wider bg-blue-800">% Margen</th>
              <th class="px-4 py-3 text-center text-xs font-bold uppercase tracking-wider">Empleados</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% mesasData.forEach((mesa, idx) => { %>
              <tr class="<%= idx % 2 === 0 ? 'bg-white' : 'bg-gray-50' %> hover:bg-blue-50 transition">
                <td class="px-4 py-3 text-sm font-semibold text-gray-900">
                  <%= mesa.mesa %>
                  <% if (!mesa.tieneTarifa) { %>
                    <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-yellow-100 text-yellow-800">
                      Sin tarifa
                    </span>
                  <% } %>
                </td>
                <td class="px-4 py-3 text-center text-sm font-semibold text-gray-900"><%= mesa.contestadas.toLocaleString('es-PE') %></td>
                <td class="px-4 py-3 text-center text-sm font-bold <%= parseFloat(mesa.nivelAtencion) >= 90 ? 'text-green-600' : 'text-red-600' %>">
                  <%= mesa.nivelAtencion %>%
                </td>
                <td class="px-4 py-3 text-center text-sm font-bold <%= parseFloat(mesa.nivelServicio) >= 90 ? 'text-green-600' : 'text-red-600' %>">
                  <%= mesa.nivelServicio %>%
                </td>
                <td class="px-4 py-3 text-center text-sm font-bold bg-green-50 text-green-700">
                  S/ <%= mesa.ingresos.toLocaleString('es-PE', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %>
                </td>
                <td class="px-4 py-3 text-center text-sm font-bold bg-red-50 text-red-700">
                  S/ <%= mesa.costoNomina.toLocaleString('es-PE', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %>
                </td>
                <td class="px-4 py-3 text-center text-sm font-bold bg-blue-50 text-blue-900">
                  S/ <%= mesa.margenBruto.toLocaleString('es-PE', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %>
                </td>
                <td class="px-4 py-3 text-center text-sm font-bold bg-blue-100 <%= parseFloat(mesa.porcentajeMargen) >= 15 ? 'text-green-700' : 'text-red-700' %>">
                  <%= mesa.porcentajeMargen %>%
                </td>
                <td class="px-4 py-3 text-center text-sm text-gray-700">
                  <span class="px-2 py-1 bg-gray-100 rounded-full text-xs font-medium"><%= mesa.empleados %></span>
                </td>
              </tr>
            <% }) %>
            
            <!-- Fila de Totales -->
            <tr class="bg-gradient-to-r from-gray-800 to-gray-900 text-white font-bold">
              <td class="px-4 py-4 text-sm uppercase">TOTALES</td>
              <td class="px-4 py-4 text-center text-sm"><%= totales.contestadas.toLocaleString('es-PE') %></td>
              <td class="px-4 py-4 text-center text-sm"><%= totales.nivelAtencion %>%</td>
              <td class="px-4 py-4 text-center text-sm"><%= totales.nivelServicio %>%</td>
              <td class="px-4 py-4 text-center text-sm bg-green-700">
                S/ <%= totales.ingresosTotales.toLocaleString('es-PE', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %>
              </td>
              <td class="px-4 py-4 text-center text-sm bg-red-700">
                S/ <%= totales.costosNomina.toLocaleString('es-PE', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %>
              </td>
              <td class="px-4 py-4 text-center text-sm bg-blue-700">
                S/ <%= totales.margenBrutoTotal.toLocaleString('es-PE', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %>
              </td>
              <td class="px-4 py-4 text-center text-sm bg-blue-800">
                <%= totales.porcentajeMargenTotal %>%
              </td>
              <td class="px-4 py-4 text-center text-sm">-</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Detalle de Nómina por Campaña y Cargo -->
    <% if (detalleNomina && detalleNomina.length > 0) { %>
    <div class="mt-6 bg-white shadow-lg rounded-lg overflow-hidden">
      <div class="bg-gradient-to-r from-teal-600 to-teal-700 px-6 py-4">
        <h2 class="text-lg lg:text-xl font-bold text-white flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
          Detalle de Nómina - Agentes Efectivos por Campaña
        </h2>
        <p class="text-teal-100 text-sm mt-1">
          Distribución de personal por campaña, cargo y clasificación
        </p>
      </div>
      
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-800 text-white">
            <tr>
              <th class="px-4 py-3 text-left text-xs font-bold uppercase tracking-wider">Campaña</th>
              <th class="px-4 py-3 text-left text-xs font-bold uppercase tracking-wider">Cargo</th>
              <th class="px-4 py-3 text-center text-xs font-bold uppercase tracking-wider">Agentes Efectivos</th>
              <th class="px-4 py-3 text-center text-xs font-bold uppercase tracking-wider">Agrupación</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% 
            let currentCampana = null;
            let campanaRowspan = {};
            
            // Calcular rowspan para cada campaña
            detalleNomina.forEach(item => {
              if (!campanaRowspan[item.campana]) {
                campanaRowspan[item.campana] = 0;
              }
              campanaRowspan[item.campana]++;
            });
            
            detalleNomina.forEach((item, index) => { 
              const isNewCampana = item.campana !== currentCampana;
              if (isNewCampana) {
                currentCampana = item.campana;
              }
              
              // Determinar color de fondo según agrupación
              let bgColor = '';
              if (item.agrupacion === 'EFT') bgColor = 'bg-green-50';
              else if (item.agrupacion === 'SUPERVISOR') bgColor = 'bg-blue-50';
              else bgColor = 'bg-gray-50';
            %>
            <tr class="<%= bgColor %> hover:bg-gray-100 transition">
              <% if (isNewCampana) { %>
              <td class="px-4 py-3 text-sm font-semibold text-gray-900 border-r border-gray-300" rowspan="<%= campanaRowspan[item.campana] %>">
                <%= item.campana || 'Sin Campaña' %>
              </td>
              <% } %>
              <td class="px-4 py-3 text-sm text-gray-700">
                <%= item.cargo || 'Sin Cargo' %>
              </td>
              <td class="px-4 py-3 text-center text-sm font-semibold text-gray-900">
                <%= item.agentesEfectivos.toFixed(2) %>
              </td>
              <td class="px-4 py-3 text-center text-xs font-bold">
                <span class="inline-flex px-2 py-1 rounded-full text-xs font-semibold
                  <%= item.agrupacion === 'EFT' ? 'bg-green-200 text-green-800' : 
                      item.agrupacion === 'SUPERVISOR' ? 'bg-blue-200 text-blue-800' : 
                      'bg-gray-200 text-gray-800' %>">
                  <%= item.agrupacion %>
                </span>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
    <% } %>

    <!-- Información Adicional -->
    <div class="mt-6 bg-blue-50 border-l-4 border-blue-400 rounded-lg p-4">
      <div class="flex items-start">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-400 mr-3 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <div>
          <h4 class="text-sm font-semibold text-blue-900">Información del Reporte</h4>
          <p class="text-sm text-blue-800 mt-1">
            Los costos se calculan automáticamente según las tarifas vigentes del periodo seleccionado. 
            Las tarifas son escalonadas según el volumen de llamadas contestadas de cada mesa.
          </p>
          <p class="text-xs text-blue-700 mt-2">
            <strong>Periodo:</strong> <%= ['Enero','Febrero','Marzo','Abril','Mayo','Junio','Julio','Agosto','Septiembre','Octubre','Noviembre','Diciembre'][periodo.mes-1] %> <%= periodo.anio %> · 
            <strong>Dataset:</strong> <%= dataset._id %> · 
            <strong>Última actualización:</strong> <%= new Date(dataset.creadoEn).toLocaleString('es-PE') %>
          </p>
        </div>
      </div>
    </div>
  <% } %>
