              <button id="mobile-menu-close" class="p-2 text-gray-500 hover:text-gray-700" aria-label="Cerrar men煤">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" class="h-5 w-5" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M6 6l12 12M6 18L18 6"/></svg>
              </button>
            </div>
            <div class="p-4 space-y-1">
              <a href="/" class="block px-3 py-3 rounded-md text-base font-medium text-gray-800 hover:bg-gray-100">Inicio</a>
              <a href="/about" class="block px-3 py-3 rounded-md text-base font-medium text-gray-800 hover:bg-gray-100">Acerca de</a>
              <a href="/docs" class="block px-3 py-3 rounded-md text-base font-medium text-gray-800 hover:bg-gray-100"> Documentaci贸n</a>
              <% if (user) { %>
                <!-- Dashboards -->
                <div class="pt-2 mt-2 border-t">
                  <button onclick="toggleSection('mobile-dashboards')" class="w-full flex items-center justify-between px-3 py-2 text-xs text-gray-700 hover:bg-gray-50 rounded-md">
                    <span class="flex items-center gap-2">
                      <svg id="icon-mobile-dashboards" class="w-4 h-4 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
                       Dashboards
                    </span>
                  </button>
                  <div id="section-mobile-dashboards" class="hidden">
                    <a href="/dashboard" class="block px-3 py-2.5 rounded-md text-base font-medium text-gray-800 hover:bg-blue-50">Tablero Principal</a>
