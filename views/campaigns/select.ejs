<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Selección de Campaña - A365</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    body {
      background: linear-gradient(135deg, #1e3a8a 0%, #312e81 100%);
      min-height: 100vh;
    }
    .campaign-card {
      transition: all 0.3s ease;
      display: flex;
      flex-direction: column;
    }
    .campaign-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 20px 40px rgba(0,0,0,0.3);
    }
    .campaign-image-container {
      width: 100%;
      aspect-ratio: 16 / 9;
      overflow: hidden;
      background: linear-gradient(135deg, #3b82f6 0%, #6366f1 100%);
      position: relative;
    }
    .campaign-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
      object-position: center;
    }
  </style>
</head>
<body>
  <div class="min-h-screen py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
      
      <!-- Header A365 -->
      <div class="text-center mb-12">
        <h1 class="text-5xl font-bold text-white mb-4">
          A365 Contact Center
        </h1>
        <p class="text-xl text-blue-200">Selecciona una campaña para continuar</p>
      </div>

      <!-- Buscador -->
      <div class="max-w-2xl mx-auto mb-10">
        <div class="relative">
          <input 
            type="text" 
            id="searchInput" 
            placeholder="Buscar campaña por nombre..."
            class="w-full px-6 py-4 rounded-xl text-lg border-2 border-white/30 bg-white/10 text-white placeholder-white/60 focus:outline-none focus:ring-4 focus:ring-blue-400 focus:border-white/50 transition backdrop-blur-sm"
          >
          <svg class="absolute right-6 top-1/2 transform -translate-y-1/2 h-6 w-6 text-white/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
          </svg>
        </div>
      </div>

      <!-- Botón Crear Campaña (solo admin) -->
      <% if (user.role === 'admin') { %>
      <div class="text-center mb-8">
        <button 
          onclick="openCreateModal()" 
          class="inline-flex items-center gap-2 bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-8 rounded-xl shadow-lg transition transform hover:scale-105"
        >
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
          </svg>
          Nueva Campaña
        </button>
      </div>
      <% } %>

      <!-- Grid de Campañas -->
      <div id="campaignsGrid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% campaigns.forEach(campaign => { %>
        <div class="campaign-card bg-white rounded-2xl shadow-2xl overflow-hidden" data-nombre="<%= campaign.nombre.toLowerCase() %>">
          <!-- Imagen de la campaña -->
          <div class="campaign-image-container">
            <img src="<%= campaign.imagen %>" alt="<%= campaign.nombre %>" class="campaign-image">
          </div>
          
          <!-- Contenido de la card -->
          <div class="p-6">
            <h3 class="text-2xl font-bold text-gray-800 mb-3"><%= campaign.nombre %></h3>
            <p class="text-gray-600 mb-4 line-clamp-2"><%= campaign.descripcion || 'Sin descripción' %></p>
            
            <div class="space-y-2 mb-6">
              <div class="flex items-center gap-2 text-sm text-gray-600">
                <svg class="h-5 w-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
                <span><strong>Gerente:</strong> <%= campaign.gerente || 'No asignado' %></span>
              </div>
              <div class="flex items-center gap-2 text-sm text-gray-600">
                <svg class="h-5 w-5 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
                <span><strong>Subcampañas:</strong> <%= campaign.subCampanas.length %></span>
              </div>
            </div>

            <!-- Botones de Acción -->
            <div class="flex gap-3">
              <a href="/campaigns/select/<%= campaign._id %>" class="flex-1 bg-gradient-to-r from-blue-600 to-indigo-700 hover:from-blue-700 hover:to-indigo-800 text-white font-bold py-3 px-4 rounded-xl text-center transition shadow-lg">
                Acceder
              </a>
              <% if (user.role === 'admin') { %>
              <a href="/campaigns/edit/<%= campaign._id %>" class="bg-gray-200 hover:bg-gray-300 text-gray-700 font-bold py-3 px-4 rounded-xl transition">
                <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
              </a>
              <button onclick="confirmDelete('<%= campaign._id %>', '<%= campaign.nombre %>')" class="bg-red-100 hover:bg-red-200 text-red-700 font-bold py-3 px-4 rounded-xl transition">
                <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                </svg>
              </button>
              <% } %>
            </div>
          </div>
        </div>
        <% }); %>
      </div>

      <!-- Mensaje si no hay campañas -->
      <% if (campaigns.length === 0) { %>
      <div class="text-center py-20">
        <svg class="h-24 w-24 text-white/40 mx-auto mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
        </svg>
        <h3 class="text-2xl font-bold text-white mb-2">No hay campañas disponibles</h3>
        <p class="text-blue-200">
          <% if (user.role === 'admin') { %>
          Crea una nueva campaña para comenzar
          <% } else { %>
          Contacta al administrador para crear campañas
          <% } %>
        </p>
      </div>
      <% } %>

    </div>
  </div>

  <!-- Modal Crear Campaña -->
  <% if (user.role === 'admin') { %>
  <div id="createModal" class="hidden fixed inset-0 bg-black/70 backdrop-blur-sm z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-2xl shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-y-auto">
      <div class="bg-gradient-to-r from-blue-600 to-indigo-700 px-8 py-6 rounded-t-2xl">
        <h2 class="text-3xl font-bold text-white">Crear Nueva Campaña</h2>
      </div>
      
      <form method="POST" action="/campaigns/create" class="p-8 space-y-6">
        <div>
          <label class="block text-sm font-bold text-gray-700 mb-2">Nombre de la Campaña *</label>
          <input type="text" name="nombre" required class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:ring-4 focus:ring-blue-200 focus:border-blue-500 transition">
        </div>

        <div>
          <label class="block text-sm font-bold text-gray-700 mb-2">Descripción</label>
          <textarea name="descripcion" rows="3" class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:ring-4 focus:ring-blue-200 focus:border-blue-500 transition"></textarea>
        </div>

        <div>
          <label class="block text-sm font-bold text-gray-700 mb-2">URL de Imagen</label>
          <input type="text" name="imagen" placeholder="/images/campana1.jpg" class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:ring-4 focus:ring-blue-200 focus:border-blue-500 transition">
          <p class="text-sm text-gray-500 mt-1">Deja vacío para usar imagen por defecto</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-bold text-gray-700 mb-2">Gerente</label>
            <input type="text" name="gerente" class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:ring-4 focus:ring-blue-200 focus:border-blue-500 transition">
          </div>
          <div>
            <label class="block text-sm font-bold text-gray-700 mb-2">Analista</label>
            <input type="text" name="analista" class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:ring-4 focus:ring-blue-200 focus:border-blue-500 transition">
          </div>
        </div>

        <div class="flex gap-4 pt-4">
          <button type="submit" class="flex-1 bg-gradient-to-r from-blue-600 to-indigo-700 hover:from-blue-700 hover:to-indigo-800 text-white font-bold py-3 px-6 rounded-xl transition shadow-lg">
            Crear Campaña
          </button>
          <button type="button" onclick="closeCreateModal()" class="flex-1 bg-gray-200 hover:bg-gray-300 text-gray-700 font-bold py-3 px-6 rounded-xl transition">
            Cancelar
          </button>
        </div>
      </form>
    </div>
  </div>
  <% } %>

  <!-- Modal Confirmar Eliminar -->
  <div id="deleteModal" class="hidden fixed inset-0 bg-black/70 backdrop-blur-sm z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-2xl shadow-2xl max-w-md w-full">
      <div class="bg-red-600 px-8 py-6 rounded-t-2xl">
        <h2 class="text-2xl font-bold text-white">Confirmar Eliminación</h2>
      </div>
      
      <div class="p-8">
        <p class="text-gray-700 mb-6">¿Estás seguro de que deseas eliminar la campaña <strong id="deleteCampaignName"></strong>?</p>
        <p class="text-sm text-red-600 mb-6">Esta acción no se puede deshacer.</p>
        
        <div class="flex gap-4">
          <form id="deleteForm" method="POST" action="" class="flex-1">
            <button type="submit" class="w-full bg-red-600 hover:bg-red-700 text-white font-bold py-3 px-6 rounded-xl transition shadow-lg">
              Eliminar
            </button>
          </form>
          <button type="button" onclick="closeDeleteModal()" class="flex-1 bg-gray-200 hover:bg-gray-300 text-gray-700 font-bold py-3 px-6 rounded-xl transition">
            Cancelar
          </button>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Buscador en tiempo real
    const searchInput = document.getElementById('searchInput');
    const campaignsGrid = document.getElementById('campaignsGrid');
    const campaignCards = document.querySelectorAll('.campaign-card');

    searchInput.addEventListener('input', function() {
      const searchTerm = this.value.toLowerCase().trim();
      
      campaignCards.forEach(card => {
        const nombre = card.getAttribute('data-nombre');
        if (nombre.includes(searchTerm)) {
          card.style.display = 'block';
        } else {
          card.style.display = 'none';
        }
      });
    });

    // Modal crear campaña
    function openCreateModal() {
      document.getElementById('createModal').classList.remove('hidden');
    }

    function closeCreateModal() {
      document.getElementById('createModal').classList.add('hidden');
    }

    // Modal eliminar campaña
    function confirmDelete(campaignId, campaignName) {
      document.getElementById('deleteCampaignName').textContent = campaignName;
      document.getElementById('deleteForm').action = '/campaigns/delete/' + campaignId;
      document.getElementById('deleteModal').classList.remove('hidden');
    }

    function closeDeleteModal() {
      document.getElementById('deleteModal').classList.add('hidden');
    }

    // Cerrar modales con ESC
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        closeCreateModal();
        closeDeleteModal();
      }
    });
  </script>
</body>
</html>
