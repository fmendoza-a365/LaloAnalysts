        <div id="mobile-menu-modal" class="fixed inset-0 z-50 hidden sm:hidden" role="dialog" aria-modal="true" aria-labelledby="mobile-menu-title">
          <!-- Overlay -->
          <div id="mobile-menu-overlay" class="absolute inset-0 bg-black bg-opacity-50"></div>
          <!-- Panel -->
          <div class="absolute inset-x-0 bottom-0 rounded-t-2xl bg-white shadow-xl max-h-[85vh] overflow-y-auto">
            <div class="px-4 pt-4 pb-2 flex items-center justify-between border-b">
