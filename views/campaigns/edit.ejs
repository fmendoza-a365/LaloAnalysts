<!-- Header -->
<div class="bg-gradient-to-r from-blue-600 to-indigo-700 rounded-lg shadow-2xl mb-8">
  <div class="px-8 py-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-white mb-2">Editar Campaña</h1>
        <p class="text-blue-100">Modifica la información de la campaña</p>
      </div>
      <a href="/campaigns" class="inline-flex items-center px-6 py-3 bg-white/20 text-white font-bold rounded-lg hover:bg-white/30 transition-all">
        <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Volver
      </a>
    </div>
  </div>
</div>

<!-- Formulario de Edición -->
<div class="bg-white rounded-xl shadow-lg p-8 mb-8">
  <form method="POST" action="/campaigns/edit/<%= campaign._id %>">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
      <div class="lg:col-span-2">
        <label class="block text-sm font-bold text-gray-700 mb-2">Nombre de la Campaña *</label>
        <input 
          type="text" 
          name="nombre" 
          value="<%= campaign.nombre %>"
          required 
          class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 text-lg font-semibold"
        >
      </div>
      
      <div class="lg:col-span-2">
        <label class="block text-sm font-bold text-gray-700 mb-2">Descripción</label>
        <textarea 
          name="descripcion" 
          rows="4"
          class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
        ><%= campaign.descripcion || '' %></textarea>
      </div>
      
      <div class="lg:col-span-2">
        <label class="block text-sm font-bold text-gray-700 mb-2">URL de Imagen</label>
        <input 
          type="text" 
          name="imagen" 
          value="<%= campaign.imagen || '' %>"
          placeholder="/images/mi-campana.jpg"
          class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
        >
        <p class="text-sm text-gray-500 mt-1">Ruta de la imagen que identificará esta campaña</p>
      </div>
      
      <div>
        <label class="block text-sm font-bold text-gray-700 mb-2">Gerente</label>
        <input 
          type="text" 
          name="gerente" 
          value="<%= campaign.gerente || '' %>"
          class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
        >
      </div>
      
      <div>
        <label class="block text-sm font-bold text-gray-700 mb-2">Analista</label>
        <input 
          type="text" 
          name="analista" 
          value="<%= campaign.analista || '' %>"
          class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
        >
      </div>
      
      <div class="lg:col-span-2">
        <label class="block text-sm font-bold text-gray-700 mb-2">Fecha de Actualización</label>
        <input 
          type="text" 
          value="<%= new Date(campaign.fechaActualizacion).toLocaleString('es-PE') %>"
          disabled
          class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg bg-gray-100 text-gray-600"
        >
      </div>
    </div>
    
    <!-- Subcampañas -->
    <div class="border-t-2 border-gray-200 pt-6 mb-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-xl font-bold text-gray-900">Subcampañas</h3>
        <button 
          type="button" 
          onclick="addSubcampaign()" 
          class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-blue-600 to-blue-700 text-white font-bold rounded-lg hover:from-blue-700 hover:to-blue-800 transition-all"
        >
          <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Agregar Subcampaña
        </button>
      </div>
      
      <div id="subcampanasContainer" class="space-y-4">
        <% if (campaign.subCampanas && campaign.subCampanas.length > 0) { %>
          <% campaign.subCampanas.forEach((sub, index) => { %>
            <div class="subcampana-item bg-gray-50 p-4 rounded-lg border-2 border-gray-200">
              <div class="flex items-start gap-4">
                <div class="flex-1 space-y-3">
                  <div>
                    <label class="block text-xs font-bold text-gray-700 mb-1">Nombre</label>
                    <input 
                      type="text" 
                      class="subcampana-nombre w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                      value="<%= sub.nombre %>"
                      placeholder="Nombre de la subcampaña"
                    >
                  </div>
                  <div>
                    <label class="block text-xs font-bold text-gray-700 mb-1">Descripción</label>
                    <input 
                      type="text" 
                      class="subcampana-descripcion w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                      value="<%= sub.descripcion || '' %>"
                      placeholder="Descripción de la subcampaña"
                    >
                  </div>
                </div>
                <button 
                  type="button" 
                  onclick="removeSubcampaign(this)" 
                  class="mt-6 p-2 bg-red-100 text-red-600 rounded-lg hover:bg-red-200 transition-all"
                >
                  <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                  </svg>
                </button>
              </div>
            </div>
          <% }); %>
        <% } %>
      </div>
      
      <input type="hidden" name="subCampanas" id="subCampanasInput">
    </div>
    
    <!-- Botones de Acción -->
    <div class="flex gap-4">
      <button 
        type="submit" 
        class="flex-1 px-8 py-4 bg-gradient-to-r from-green-600 to-green-700 text-white text-lg font-bold rounded-lg shadow-lg hover:from-green-700 hover:to-green-800 transition-all"
      >
        Guardar Cambios
      </button>
      <a 
        href="/campaigns" 
        class="px-8 py-4 bg-gray-500 text-white text-lg font-bold rounded-lg shadow-lg hover:bg-gray-600 transition-all"
      >
        Cancelar
      </a>
    </div>
  </form>
</div>

<script>
// Agregar nueva subcampaña
function addSubcampaign() {
  const container = document.getElementById('subcampanasContainer');
  const div = document.createElement('div');
  div.className = 'subcampana-item bg-gray-50 p-4 rounded-lg border-2 border-gray-200';
  div.innerHTML = `
    <div class="flex items-start gap-4">
      <div class="flex-1 space-y-3">
        <div>
          <label class="block text-xs font-bold text-gray-700 mb-1">Nombre</label>
          <input 
            type="text" 
            class="subcampana-nombre w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
            placeholder="Nombre de la subcampaña"
          >
        </div>
        <div>
          <label class="block text-xs font-bold text-gray-700 mb-1">Descripción</label>
          <input 
            type="text" 
            class="subcampana-descripcion w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
            placeholder="Descripción de la subcampaña"
          >
        </div>
      </div>
      <button 
        type="button" 
        onclick="removeSubcampaign(this)" 
        class="mt-6 p-2 bg-red-100 text-red-600 rounded-lg hover:bg-red-200 transition-all"
      >
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
        </svg>
      </button>
    </div>
  `;
  container.appendChild(div);
}

// Eliminar subcampaña
function removeSubcampaign(button) {
  button.closest('.subcampana-item').remove();
}

// Serializar subcampañas antes de enviar
document.querySelector('form').addEventListener('submit', function(e) {
  const items = document.querySelectorAll('.subcampana-item');
  const subCampanas = [];
  
  items.forEach(item => {
    const nombre = item.querySelector('.subcampana-nombre').value.trim();
    const descripcion = item.querySelector('.subcampana-descripcion').value.trim();
    
    if (nombre) {
      subCampanas.push({ nombre, descripcion });
    }
  });
  
  document.getElementById('subCampanasInput').value = JSON.stringify(subCampanas);
});
</script>
