# ==================================
# CONFIGURACIÓN DOCKER - A365 CONTACT CENTER
# ==================================
# Copia este archivo a .env.docker y modifica los valores

# ==================================
# APLICACIÓN
# ==================================
NODE_ENV=production
PORT=3000
BASE_URL=http://localhost:3000

# ==================================
# MONGODB
# ==================================
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=changeme-secure-password
MONGO_DB=a365-db
MONGO_PORT=27017

# URI de MongoDB (se construye automáticamente en docker-compose)
# MONGO_URI=mongodb://admin:changeme-secure-password@mongodb:27017/a365-db?authSource=admin

# ==================================
# SESIÓN
# ==================================
SESSION_SECRET=change-this-to-a-very-secure-random-string-in-production
SESSION_NAME=a365.sid
SESSION_MAX_AGE=86400000

# ==================================
# SEGURIDAD
# ==================================
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# ==================================
# SEEDS (Datos de Demostración)
# ==================================
# true = Crear usuarios y campañas demo al iniciar
# false = No crear datos demo
SEED_DEMO=true

# ==================================
# MONGO EXPRESS (UI para MongoDB) - OPCIONAL
# ==================================
MONGO_EXPRESS_PORT=8081
MONGO_EXPRESS_USER=admin
MONGO_EXPRESS_PASSWORD=pass

# ==================================
# POWER BI (OPCIONAL)
# ==================================
POWERBI_WORKSPACE_ID=
POWERBI_REPORT_ID=
POWERBI_CLIENT_ID=
POWERBI_CLIENT_SECRET=
POWERBI_TENANT_ID=

# ==================================
# EMAIL (OPCIONAL)
# ==================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASS=tu-password

# ==================================
# NOTAS DE SEGURIDAD
# ==================================
# IMPORTANTE PARA PRODUCCIÓN:
# 1. Cambia TODAS las contraseñas por defecto
# 2. Usa contraseñas fuertes y únicas
# 3. No compartas este archivo en Git
# 4. Usa secretos gestionados en producción (Docker Secrets, Kubernetes Secrets, etc.)
# 5. Cambia SESSION_SECRET a un string aleatorio largo
