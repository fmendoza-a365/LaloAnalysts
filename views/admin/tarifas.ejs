<% if (tarifas && tarifas.length > 0) { %>
<div class="mt-6 bg-white shadow rounded-lg overflow-hidden">
  <div class="px-6 py-4 border-b border-gray-200">
    <h4 class="text-md font-semibold text-gray-900">Tarifas Registradas</h4>
  </div>
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Mesa</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Vigencia Desde</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Vigencia Hasta</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Rangos</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Estado</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% tarifas.forEach(t => { %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
              <%= t.mesa %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
              <%= t.vigenciaDesde ? new Date(t.vigenciaDesde).toLocaleDateString('es-PE') : '-' %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
              <%= t.vigenciaHasta ? new Date(t.vigenciaHasta).toLocaleDateString('es-PE') : 'Indefinido' %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
              <%= t.rangos.length %> rangos
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% if (t.activo) { %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                  Activo
                </span>
              <% } else { %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                  Inactivo
                </span>
              <% } %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm">
              <div class="flex gap-2">
                <form action="/admin/tarifas/<%= t._id %>/toggle" method="POST" class="inline">
                  <button type="submit" class="text-blue-600 hover:text-blue-900">
                    <%= t.activo ? 'Desactivar' : 'Activar' %>
                  </button>
                </form>
                <form action="/admin/tarifas/<%= t._id %>/delete" method="POST" class="inline" onsubmit="return confirm('Â¿Eliminar esta tarifa?')">
                  <button type="submit" class="text-red-600 hover:text-red-900">
                    Eliminar
                  </button>
                </form>
              </div>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  
  <% if (pagination && pagination.totalPages > 1) { %>
