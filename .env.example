# Configuración del servidor
PORT=3000
NODE_ENV=development
SEED_DEMO=true

# Base de datos
MONGODB_URI=mongodb://localhost:27017/a365-analytics
TEST_MONGODB_URI=mongodb://localhost:27017/a365-analytics-test

# Sesiones y autenticación
SESSION_SECRET=tu-clave-secreta-de-sesion
JWT_SECRET=tu-clave-secreta-jwt

# Power BI (opcional)
POWER_BI_CLIENT_ID=
POWER_BI_CLIENT_SECRET=
POWER_BI_TENANT_ID=
POWER_BI_WORKSPACE_ID=

# Correo (opcional)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@a365-analytics.local

# Logging y CORS
LOG_LEVEL=info
LOG_FILE=app.log
CORS_ORIGIN=*

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
